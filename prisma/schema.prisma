generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email String  @unique
  id    Int     @default(autoincrement()) @id
  name  String?
}

model Goal {
  name   String
  type   String   
  id        Int     @default(autoincrement()) @id
  createdAt  DateTime   @default(now())
}

model Task {
  name        String
  id          Int     @default(autoincrement()) @id
  completed   Boolean
  createdAt   DateTime   @default(now())
}
